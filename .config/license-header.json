{
	"ignore": [".config", "scripts", "**/*/assets", ".git", ".github", "*", "test-config"],
	"license": ".config/license-header.txt",
	"licenseFormats": {
		"ts|js": {
			"prepend": "/*************************************************************************",
			"append": " **************************************************************************/\n",
			"eachLine": {
				"prepend": " * "
			}
		}
	},
	"defaultFormat": {
		"prepend": "/*",
		"append": "*/"
	},
	"trailingWhitespace": "TRIM"
}
