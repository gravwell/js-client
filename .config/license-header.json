{
	"ignore": [".config", "scripts", "docs", "**/*/assets", ".git", ".github", "*", ".idea"],
	"license": ".config/license-header.txt",
	"licenseFormats": {
		"ts|js": {
			"prepend": "/*************************************************************************",
			"append": " **************************************************************************/\n",
			"eachLine": {
				"prepend": " * "
			}
		},
		"md|html": {
			"prepend": "<!--",
			"append": "-->"
		}
	},
	"defaultFormat": {
		"prepend": "/*",
		"append": "*/"
	},
	"trailingWhitespace": "TRIM"
}
